<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
   <settings>
      <setting name="mapUnderscoreToCamelCase" value="true"/>
   </settings>
   
	<typeAliases>
		<typeAlias type="com.itPocket.member.domain.MemberVO" alias="memberVO"/>
	</typeAliases>

   <environments default="mysql">
      <environment id="mysql">
         <transactionManager type="JDBC"/>
         <dataSource type="POOLED">
            <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
             <!-- localhost:3306/(database 이름적기)-->
            <property name="url" value="jdbc:mysql://localhost:3306/itpocket"/>
            <property name="username" value="root"/>
            <property name="password" value="1234"/>
         </dataSource>
      </environment>
   </environments>
   
	<mappers>
		<mapper resource="com/itPocket/mybatis/mapper/memberMapper.xml"/>
		<mapper resource="com/itPocket/mybatis/mapper/commentMapper.xml"/>
		<mapper resource="com/itPocket/mybatis/mapper/fileMapper.xml"/>
		<mapper resource="com/itPocket/mybatis/mapper/postMapper.xml"/>
		<mapper resource="com/itPocket/mybatis/mapper/recommendMapper.xml"/>
	</mappers>   
</configuration>
